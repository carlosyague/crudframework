<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.crudfw</groupId>
		<artifactId>crudfw</artifactId>
		<version>1.0-SNAPSHOT</version>
	</parent>
	<groupId>org.crudfw</groupId>
	<artifactId>crudfw-samples</artifactId>
	<packaging>pom</packaging>

	<version>1.0-SNAPSHOT</version>

	<name>CRUD Framework: Sample Applications</name>
	<build>
		<!-- CONFIGURACION PLUGINS COMUNES SUBMODULOS -->
		<pluginManagement>
			<plugins>

    			<!-- crudfw PLUGIN -->
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>crudfw-maven-plugin</artifactId>
					<version>${crudfw.maven.plugin.version}
					</version>
					<configuration>
						<genericCore>${crudfw.maven.plugin.genericCore}
						</genericCore>
						<fullSource>${crudfw.maven.plugin.fullSource}
						</fullSource>
						<componentProperties>
							<appfusePackage> ${crudfw.maven.plugin.appfusePackage}
							</appfusePackage>
							<authorName>${crudfw.maven.plugin.autorName}</authorName>
							<configurationfile>../../crudfw-model/src/main/resources/hibernate.cfg.xml</configurationfile>
							<sampleDataFile>../../crudfw-model/src/test/resources/sample-data.xml</sampleDataFile>
						</componentProperties>
					</configuration>
					<dependencies>
						<dependency>
							<groupId>${jdbc.groupId}</groupId>
							<artifactId>${jdbc.artifactId}</artifactId>
							<version>${jdbc.version}</version>
						</dependency>
					</dependencies>
				</plugin>

    			<!-- CRUD GENERATOR PLUGIN -->
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>crudgenerator-maven-plugin</artifactId>
					<version>0.1</version>
					<configuration>
						<genericCore>${crudgenerator.maven.plugin.genericCore}</genericCore>
						<fullSource>${crudgenerator.maven.plugin.fullSource}</fullSource>
						<componentProperties>
							<appfusePackage>${crudgenerator.maven.plugin.appfusePackage}</appfusePackage>
							<authorName>${crudgenerator.maven.plugin.autorName}</authorName>
							<configurationfile>src/main/resources/hibernate.cfg.xml</configurationfile>
							<sampleDataFile>src/test/resources/sample-data.xml</sampleDataFile>
						</componentProperties>
					</configuration>
					<dependencies>
						<dependency>
							<groupId>${jdbc.groupId}</groupId>
							<artifactId>${jdbc.artifactId}</artifactId>
							<version>${jdbc.version}</version>
						</dependency>
					</dependencies>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
	<reporting>
		<plugins>
			<plugin>
				<artifactId>maven-pmd-plugin</artifactId>
				<configuration>
					<aggregate>true</aggregate>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-jxr-plugin</artifactId>
				<configuration>
					<aggregate>true</aggregate>
				</configuration>
			</plugin>
		</plugins>
	</reporting>
	<dependencies>
	</dependencies>
	<properties>
		<crudgenerator.maven.plugin.version>0.1</crudgenerator.maven.plugin.version>
		<crudgenerator.maven.plugin.autorName>cyague@lcc.uma</crudgenerator.maven.plugin.autorName>
		<crudgenerator.maven.plugin.appfusePackage>es.uma.crudframework</crudgenerator.maven.plugin.appfusePackage>
		<crudgenerator.maven.plugin.genericCore>false</crudgenerator.maven.plugin.genericCore>
		<crudgenerator.maven.plugin.fullSource>false</crudgenerator.maven.plugin.fullSource>
	</properties>
	<modules>
		<module>tennisclub-manager</module>
	</modules>
</project>